<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonBarStyle"
           parent="Widget.ButtonBar">
        <item name="negativeButtonIcon">@null</item>
        <item name="positiveButtonIcon">@null</item>
        <item name="positiveButtonEnabled">true</item>
        <item name="positiveButtonLabel">@string/save</item>
    </style>

    <style name="Form">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="FormField">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="FormFieldLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textAllCaps">true</item>>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>